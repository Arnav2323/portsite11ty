<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/styles/index.css">
</head>

<body>
    <header>
        <a class="toggleNavButton" href="javascript:void(0)">+</a>
        <nav class="nav">
            <a href="/">Home</a>
            <a href="/skills">Skills</a>
            <a href="/">Projects (Coming Soon)</a>
            <a href="/">Contact (Coming Soon)</a>
        </nav>
    </header>

    <div class="content">
        {{ content | safe }}
    </div>


    <script>
        const navBar = document.querySelector(".nav");
        const toggleNavButton = document.querySelector(".toggleNavButton");


        window.addEventListener("load", ()=> {
            if (window.innerWidth == null) {
                setTimeout(1000, () => handleInitialWidthAssignment);
                return;
            }
            hideMobileDropdown();
        });

        function hideMobileDropdown() {
            if (window.innerWidth <= 1000) {
                navBar.classList.add("hide");
            }
        }
        
        toggleNavButton.addEventListener("click", () => {
            if (navBar.classList.contains("hide")) {
                toggleNavButton.textContent = "-";
                navBar.classList.remove("hide");
            } else {
                toggleNavButton.textContent = "+";
                navBar.classList.add("hide");
            }
            });  
        
    </script>
</body>
</html>